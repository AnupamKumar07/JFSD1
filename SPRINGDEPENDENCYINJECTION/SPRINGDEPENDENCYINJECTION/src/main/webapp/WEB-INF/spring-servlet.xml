<?xml version="1.0" encoding="UTF-8"?>
<beans 	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
							http://www.springframework.org/schema/context
							http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:component-scan base-package="klu"></context:component-scan>	
	
	<bean id="id1" class="klu.Faculty">
		<property name="id" value="7937" ></property>
		<property name="name" value="kadir"></property>
		<property name="designation" value="Assistant Professor"></property>
	</bean>
		
	<bean id="id2" class="klu.Student">
		<constructor-arg value="22000" type="int"></constructor-arg>
		<constructor-arg value="rohith"></constructor-arg>
		<constructor-arg value="CSE"></constructor-arg>
	</bean>		
	
	<bean id="id3" class="klu.DAO"></bean>
</beans>